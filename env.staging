# =================================
# STAGING ENVIRONMENT
# =================================
NODE_ENV=staging
PORT=3000
APP_NAME=Classified Ads Backend (Staging)
APP_VERSION=1.0.0
APP_URL=https://api-staging.classifiedads.com
FRONTEND_URL=https://staging.classifiedads.com

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=staging-db.internal
DB_PORT=5432
DB_USERNAME=classified_ads_staging
DB_PASSWORD=
DB_DATABASE=classified_ads_staging
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_MIGRATIONS_RUN=true

# =================================
# AUTHENTICATION & SECURITY
# =================================
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=

# =================================
# FIREBASE CONFIGURATION
# =================================
FIREBASE_PROJECT_ID=classified-ads-staging
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase/firebase-staging-service-account.json
FIREBASE_WEB_API_KEY=
FIREBASE_AUTH_DOMAIN=classified-ads-staging.firebaseapp.com
FIREBASE_STORAGE_BUCKET=classified-ads-staging.appspot.com
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# =================================
# GOOGLE CLOUD CONFIGURATION
# =================================
GOOGLE_CLOUD_PROJECT_ID=classified-ads-staging
GOOGLE_CLOUD_KEY_FILE=./config/gcp/gcp-staging-service-account.json
GOOGLE_CLOUD_STORAGE_BUCKET=classified-ads-staging-storage
GOOGLE_CLOUD_LOCATION=us-central1

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=staging-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=
REDIS_MAX_RETRIES=5
REDIS_RETRY_DELAY=3000
REDIS_KEY_PREFIX=classified_ads_staging:

# =================================
# EMAIL CONFIGURATION
# =================================
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Classified Ads Staging
SMTP_FROM_EMAIL=noreply@staging.classifiedads.com

# Alternative Email Services (Staging)
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=staging.classifiedads.com
SES_ACCESS_KEY_ID=
SES_SECRET_ACCESS_KEY=
SES_REGION=us-east-1

# =================================
# SMS CONFIGURATION
# =================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# Alternative SMS Services
NEXMO_API_KEY=
NEXMO_API_SECRET=
NEXMO_FROM_NUMBER=

# =================================
# PUSH NOTIFICATIONS
# =================================
FIREBASE_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:noreply@staging.classifiedads.com

# Apple Push Notifications
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.classifiedads.staging
APNS_KEY_PATH=./config/apns/apns-staging-key.p8
APNS_PRODUCTION=false

# =================================
# FILE STORAGE
# =================================
STORAGE_TYPE=s3
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 (Staging)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=classified-ads-staging-uploads
AWS_S3_ACL=public-read

# =================================
# RATE LIMITING
# =================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=500
THROTTLE_SKIP_IF=
THROTTLE_SKIP_SUCCESS_IF=

# =================================
# MONITORING & LOGGING
# =================================
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10
LOG_DATE_PATTERN=YYYY-MM-DD

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=staging
SENTRY_RELEASE=

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=Classified Ads Backend Staging
DATADOG_API_KEY=

# =================================
# ANALYTICS & METRICS
# =================================
GOOGLE_ANALYTICS_TRACKING_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# =================================
# PAYMENT PROCESSING
# =================================
STRIPE_PUBLIC_KEY=pk_test_
STRIPE_SECRET_KEY=sk_test_
STRIPE_WEBHOOK_SECRET=whsec_test_
STRIPE_ENDPOINT_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# =================================
# SOCIAL AUTHENTICATION
# =================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =================================
# GEOLOCATION SERVICES
# =================================
MAPBOX_ACCESS_TOKEN=
GOOGLE_MAPS_API_KEY=
OPENCAGE_API_KEY=

# =================================
# SEARCH SERVICES
# =================================
ELASTICSEARCH_URL=https://staging-elasticsearch.internal:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=classified_ads_staging

ALGOLIA_APP_ID=
ALGOLIA_API_KEY=
ALGOLIA_SEARCH_KEY=

# =================================
# CACHING
# =================================
CACHE_TTL=7200
CACHE_MAX_ITEMS=5000
CACHE_STORE=redis

# =================================
# WEBHOOK CONFIGURATION
# =================================
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=10000
WEBHOOK_MAX_RETRIES=5

# =================================
# CONTENT MODERATION
# =================================
OPENAI_API_KEY=
PERSPECTIVE_API_KEY=
AKISMET_API_KEY=

# =================================
# INTERNATIONALIZATION
# =================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de
TIMEZONE=UTC

# =================================
# ADMIN CONFIGURATION
# =================================
ADMIN_EMAIL=admin@staging.classifiedads.com
ADMIN_PASSWORD=
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups

# =================================
# NOTIFICATION SYSTEM
# =================================
NOTIFICATION_QUEUE_CONCURRENCY=10
NOTIFICATION_RATE_LIMIT_PER_MINUTE=5000
NOTIFICATION_RETRY_ATTEMPTS=5
NOTIFICATION_RETRY_DELAY=10000
NOTIFICATION_BATCH_SIZE=200

# Notification Channels Enable/Disable
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true

# =================================
# API VERSIONING
# =================================
API_VERSION=v1
API_PREFIX=api
API_GLOBAL_PREFIX=api/v1

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=https://staging.classifiedads.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization
CORS_CREDENTIALS=true

# =================================
# HEALTH CHECKS
# =================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE_TIMEOUT=2000
HEALTH_CHECK_REDIS_TIMEOUT=2000
HEALTH_CHECK_EXTERNAL_TIMEOUT=10000

# =================================
# FEATURE FLAGS
# =================================
FEATURE_POST_MODERATION=true
FEATURE_USER_VERIFICATION=true
FEATURE_PREMIUM_LISTINGS=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_BULK_OPERATIONS=true
FEATURE_EXPORT_DATA=true 