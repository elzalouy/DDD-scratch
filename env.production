# =================================
# PRODUCTION ENVIRONMENT
# =================================
NODE_ENV=production
PORT=3000
APP_NAME=Classified Ads Backend
APP_VERSION=1.0.0
APP_URL=https://api.classifiedads.com
FRONTEND_URL=https://classifiedads.com

# =================================
# DATABASE CONFIGURATION
# =================================
DB_HOST=production-db.internal
DB_PORT=5432
DB_USERNAME=classified_ads_prod
DB_PASSWORD=
DB_DATABASE=classified_ads_production
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_MIGRATIONS_RUN=false

# =================================
# AUTHENTICATION & SECURITY
# =================================
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=14
SESSION_SECRET=

# =================================
# FIREBASE CONFIGURATION
# =================================
FIREBASE_PROJECT_ID=classified-ads-production
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase/firebase-production-service-account.json
FIREBASE_WEB_API_KEY=
FIREBASE_AUTH_DOMAIN=classified-ads-production.firebaseapp.com
FIREBASE_STORAGE_BUCKET=classified-ads-production.appspot.com
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# =================================
# GOOGLE CLOUD CONFIGURATION
# =================================
GOOGLE_CLOUD_PROJECT_ID=classified-ads-production
GOOGLE_CLOUD_KEY_FILE=./config/gcp/gcp-production-service-account.json
GOOGLE_CLOUD_STORAGE_BUCKET=classified-ads-production-storage
GOOGLE_CLOUD_LOCATION=us-central1

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=production-redis.internal
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=
REDIS_MAX_RETRIES=10
REDIS_RETRY_DELAY=1000
REDIS_KEY_PREFIX=classified_ads_prod:

# =================================
# EMAIL CONFIGURATION
# =================================
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Classified Ads
SMTP_FROM_EMAIL=noreply@classifiedads.com

# Alternative Email Services (Production)
SENDGRID_API_KEY=
MAILGUN_API_KEY=
MAILGUN_DOMAIN=classifiedads.com
SES_ACCESS_KEY_ID=
SES_SECRET_ACCESS_KEY=
SES_REGION=us-east-1

# =================================
# SMS CONFIGURATION
# =================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_MESSAGING_SERVICE_SID=

# Alternative SMS Services
NEXMO_API_KEY=
NEXMO_API_SECRET=
NEXMO_FROM_NUMBER=

# =================================
# PUSH NOTIFICATIONS
# =================================
FIREBASE_SERVER_KEY=
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:noreply@classifiedads.com

# Apple Push Notifications
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_BUNDLE_ID=com.classifiedads.app
APNS_KEY_PATH=./config/apns/apns-production-key.p8
APNS_PRODUCTION=true

# =================================
# FILE STORAGE
# =================================
STORAGE_TYPE=s3
STORAGE_LOCAL_PATH=./uploads
STORAGE_MAX_FILE_SIZE=10485760
STORAGE_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=classified-ads-production-uploads
AWS_S3_ACL=public-read

# =================================
# RATE LIMITING
# =================================
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
THROTTLE_SKIP_IF=
THROTTLE_SKIP_SUCCESS_IF=

# =================================
# MONITORING & LOGGING
# =================================
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/classified-ads
LOG_MAX_SIZE=100m
LOG_MAX_FILES=20
LOG_DATE_PATTERN=YYYY-MM-DD

# Sentry Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=

# Application Performance Monitoring
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=Classified Ads Backend Production
DATADOG_API_KEY=

# =================================
# ANALYTICS & METRICS
# =================================
GOOGLE_ANALYTICS_TRACKING_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# =================================
# PAYMENT PROCESSING
# =================================
STRIPE_PUBLIC_KEY=pk_live_
STRIPE_SECRET_KEY=sk_live_
STRIPE_WEBHOOK_SECRET=whsec_live_
STRIPE_ENDPOINT_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=live

# =================================
# SOCIAL AUTHENTICATION
# =================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# =================================
# GEOLOCATION SERVICES
# =================================
MAPBOX_ACCESS_TOKEN=
GOOGLE_MAPS_API_KEY=
OPENCAGE_API_KEY=

# =================================
# SEARCH SERVICES
# =================================
ELASTICSEARCH_URL=https://production-elasticsearch.internal:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=classified_ads_prod

ALGOLIA_APP_ID=
ALGOLIA_API_KEY=
ALGOLIA_SEARCH_KEY=

# =================================
# CACHING
# =================================
CACHE_TTL=14400
CACHE_MAX_ITEMS=50000
CACHE_STORE=redis

# =================================
# WEBHOOK CONFIGURATION
# =================================
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=15000
WEBHOOK_MAX_RETRIES=10

# =================================
# CONTENT MODERATION
# =================================
OPENAI_API_KEY=
PERSPECTIVE_API_KEY=
AKISMET_API_KEY=

# =================================
# INTERNATIONALIZATION
# =================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ru,zh,ja
TIMEZONE=UTC

# =================================
# ADMIN CONFIGURATION
# =================================
ADMIN_EMAIL=admin@classifiedads.com
ADMIN_PASSWORD=
ADMIN_FIRST_NAME=System
ADMIN_LAST_NAME=Administrator

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_STORAGE_PATH=/var/backups

# =================================
# NOTIFICATION SYSTEM
# =================================
NOTIFICATION_QUEUE_CONCURRENCY=50
NOTIFICATION_RATE_LIMIT_PER_MINUTE=10000
NOTIFICATION_RETRY_ATTEMPTS=10
NOTIFICATION_RETRY_DELAY=30000
NOTIFICATION_BATCH_SIZE=500

# Notification Channels Enable/Disable
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_WEBHOOK_NOTIFICATIONS=true
ENABLE_IN_APP_NOTIFICATIONS=true

# =================================
# API VERSIONING
# =================================
API_VERSION=v1
API_PREFIX=api
API_GLOBAL_PREFIX=api/v1

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=https://classifiedads.com,https://www.classifiedads.com
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_ALLOWED_HEADERS=Content-Type,Accept,Authorization
CORS_CREDENTIALS=true

# =================================
# HEALTH CHECKS
# =================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATABASE_TIMEOUT=5000
HEALTH_CHECK_REDIS_TIMEOUT=5000
HEALTH_CHECK_EXTERNAL_TIMEOUT=15000

# =================================
# FEATURE FLAGS
# =================================
FEATURE_POST_MODERATION=true
FEATURE_USER_VERIFICATION=true
FEATURE_PREMIUM_LISTINGS=true
FEATURE_ANALYTICS_DASHBOARD=true
FEATURE_BULK_OPERATIONS=true
FEATURE_EXPORT_DATA=true

# =================================
# SSL/TLS CONFIGURATION
# =================================
SSL_CERT_PATH=./config/ssl/cert.pem
SSL_KEY_PATH=./config/ssl/private-key.pem
SSL_CA_PATH=./config/ssl/ca-bundle.crt
FORCE_HTTPS=true

# =================================
# CLUSTERING & SCALING
# =================================
CLUSTER_WORKERS=4
MAX_MEMORY_USAGE=1024
CPU_THRESHOLD=80
SCALE_UP_THRESHOLD=70
SCALE_DOWN_THRESHOLD=30

# =================================
# SECURITY HEADERS
# =================================
HELMET_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
REFERRER_POLICY=strict-origin-when-cross-origin 